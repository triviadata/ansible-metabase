[Unit]
Description=Metabase - Data visualization platform
Documentation=https://www.metabase.com/docs/latest
After=network.target

[Service]
ExecStart=/usr/bin/java \
    -Dlog4j.configurationFile=file:{{ metabase_log4j2_file }} \
    {{ metabase_jvm_args }} -jar {{ metabase_jarfile }}

Type=simple
User={{ metabase_user }}
Group={{ metabase_group }}
WorkingDirectory={{ metabase_app_dir }}

SuccessExitStatus=143

Restart=on-failure
RestartSec=10

{% include './environment.j2' %}


[Install]
WantedBy=multi-user.target
